@{
    var ListSachTu = ViewBag.Danhsach as List<Sach_value.sachvalue>;
    int sodong = (int)ViewBag.Sodong;
    int TangTrang = (int)ViewBag.Maxpage;
    int tam = 0;
}



<div class="row">
    <div class="col-sm-3">
        @{
            Html.RenderAction("PartialviewMenu", "Home");
        }
    </div>
    <div class="col">


        @for (int i = 0; i < sodong; i++)
        {
            int stt = 0;
            <div class="card-deck">
                @for (int j = tam; j < ListSachTu.Count; j++)
                {

                    <div class="card">
                        <a href="@Url.Action("ChiTietSp","Home",new {ID=ListSachTu[j].id })"> <img  src="@ListSachTu[j].HinhAnh" width="300" height="400" alt="Card image cap"></a>
                        <div class="card-body">
                            <h5 class="card-title">@ListSachTu[j].Tensach</h5>
                        </div>

                    </div>


                    if (stt == 2 || j + 1 == ListSachTu.Count)
                    {
                        tam = j + 1;
                        break;
                    }
                    stt++;
                }
            </div>

        }


        <ul class="pagination justify-content-center">
            <li class="page-item ">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>

            @for (int i = 0; i < TangTrang; i++)
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("LayTuSachPT","Home",new {ID=ListSachTu[0].idtusach ,pageIndex=@i })">@i</a></li>
            }

            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>

    </div>
</div>
