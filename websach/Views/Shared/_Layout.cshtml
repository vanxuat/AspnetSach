       }

   </header>
   <div >

       @RenderBody()
   </div>

   <footer>
       @Scripts.Render("~/bundles/jquery")
       @Scripts.Render("~/bundles/bootstrap")
       @Scripts.Render("~/vanxuat/js")
      @Scripts.Render("~/bundles/Jqa")
